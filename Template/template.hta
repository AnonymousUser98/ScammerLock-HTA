<hta:application id="oBVC" 
applicationname="LOCK"  
version="1.0" 
maximizebutton="no" 
minimizebutton="no" 
sysmenu="no" 
Caption="no" 
windowstate="maximize"/>
<!-- END OF IMPORTANT CODE -->

<body scroll="no">
	<!-- INSERT BODY HTML HERE -->
</body>

<script language="javascript">
	// A popup message that looks like a system dialog box will appear whenever the mouse is clicked (as long as there isn't already one open).
	// This popup will have an OK button that will close it.
	function noClick() {
		if ((event.button==1)||(event.button==2)) {
			alert('Your device is locked.'); // This line controls the message that appears in the popup.
		}
	}
	document.onmousedown=noClick
</script>
</html>
